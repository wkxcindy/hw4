<h1 class="mb-4"><%= @place["name"] %></h1>

<p><a href="/places" class="btn btn-secondary">Back to Places</a></p>

<h2 class="mt-4">Entries</h2>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if entry.image.attached? %>
          <img src="<%= url_for(entry.image) %>" class="card-img-top" alt="Entry Image">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <p class="card-text"><%= entry["description"] %></p>
          <p class="text-muted">Date: <%= entry["occurred_on"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p><a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">Add a New Entry</a></p>