<h1 class="mb-4">New Entry</h1>

<form action="/entries" method="post" enctype="multipart/form-data" class="container w-50">
  <input type="hidden" name="place_id" value="<%= params['place_id'] %>">

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" name="title" required class="form-control">
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" required class="form-control" rows="3"></textarea>
  </div>

  <div class="mb-3">
    <label for="occurred_on" class="form-label">Date</label>
    <input type="date" name="occurred_on" required class="form-control">
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Upload Image (Optional)</label>
    <input type="file" name="image" class="form-control">
  </div>

  <button type="submit" class="btn btn-primary">Save Entry</button>
</form>

